{
  "name": "market-pulse-server",
  "version": "1.0.0",
  "description": "Server for the Market Pulse extension",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js"
  },
  "nodemonConfig": {
    "ignore": [
      "data/symbols.json",
      "node_modules/*"
    ],
    "watch": [
      "server",
      "index.js"
    ],
    "ext": "js,json"
  },
  "dependencies": {
    "express": "^4.18.2",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "nodemon": "^3.1.7",
    "csv-parser": "^3.0.0"
  }
}
